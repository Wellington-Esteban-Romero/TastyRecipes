<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color al presionar -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Color de fondo -->
            <corners android:radius="8dp" /> <!-- Bordes redondeados -->
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" /> <!-- Borde del elemento -->
        </shape>
    </item>
</selector>